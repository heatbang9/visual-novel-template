<?xml version="1.0" encoding="UTF-8"?>
<scene name="first_meeting">
    <background type="image" path="res://assets/backgrounds/classroom.png"/>
    <characters>
        <character id="chulsoo" name="철수" default_position="left">
            <portrait path="res://assets/characters/chulsoo/normal.png"/>
        </character>
        <character id="younghee" name="영희" default_position="right">
            <portrait path="res://assets/characters/younghee/normal.png"/>
        </character>
    </characters>
    <dialogue>
        <message speaker="narrator">평화로운 어느 봄날, 교실에서...</message>
        <message speaker="chulsoo" emotion="normal">안녕하세요, 영희님!</message>
        <message speaker="younghee" emotion="happy">어머, 철수군. 안녕하세요!</message>
        <message speaker="chulsoo" emotion="smile">오늘 날씨가 참 좋네요.</message>
        <choice text="어떻게 대화를 이어갈까?">
            <option text="공부 얘기하기">
                <message speaker="younghee" emotion="normal">그러게요. 근데 오늘 수학 숙제는 하셨나요?</message>
                <message speaker="chulsoo" emotion="surprised">앗! 숙제가 있었다니...</message>
            </option>
            <option text="날씨 얘기하기">
                <message speaker="younghee" emotion="smile">네, 점심시간에 같이 산책할까요?</message>
                <message speaker="chulsoo" emotion="happy">좋아요! 기대되네요.</message>
            </option>
        </choice>
    </dialogue>
</scene>