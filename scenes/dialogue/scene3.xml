<?xml version="1.0" encoding="UTF-8"?>
<scene name="class_time">
    <background type="image" path="res://assets/backgrounds/classroom.png"/>
    <characters>
        <character id="chulsoo" name="철수" default_position="left">
            <portrait path="res://assets/characters/chulsoo/normal.png"/>
        </character>
        <character id="younghee" name="영희" default_position="right">
            <portrait path="res://assets/characters/younghee/normal.png"/>
        </character>
        <character id="teacher" name="선생님" default_position="center">
            <portrait path="res://assets/characters/teacher/normal.png"/>
        </character>
    </characters>
    <dialogue>
        <message speaker="narrator">수학 수업이 시작되었습니다.</message>
        <message speaker="teacher">오늘은 이차방정식에 대해 배워보겠습니다.</message>
        <choice text="어떻게 할까?">
            <option text="열심히 필기하기">
                <message speaker="narrator">철수는 열심히 필기를 했습니다.</message>
                <message speaker="younghee" emotion="smile">철수군 필기 정말 꼼꼼하네요.</message>
            </option>
            <option text="집중하지 않기">
                <message speaker="teacher" emotion="angry">철수! 집중하세요!</message>
                <message speaker="chulsoo" emotion="surprised">죄송합니다...</message>
            </option>
        </choice>
    </dialogue>
</scene>